.github-link
  right 0
  z-index 110
  width 100px
  height: 100px
  font-size 12px
  @media screen and (max-width: 768px)
    font-size 10px
  a
    display flex
    align-items flex-end
    position: absolute
    top -70px
    right -70px
    width: 140px
    height 140px
    z-index 100
    transform rotate(45deg)
    background url('../images/GitHub-Mark-Light-64px.png') no-repeat 58px 85px $colorBlack
    background-size 25px
    @media screen and (max-width: 768px)
      background-size 20px
      background-position 40px 60px
      top -50px
      right -50px
      width: 100px
      height 100px
    span
      width: 100%;
      text-align: center;
      dispaly inline-block
      padding-bottom 10px
      @media screen and (max-width: 768px)
        padding-bottom 5px
  a
  a:active
  a:focus
    text-decoration: none
    color $colorWhite
