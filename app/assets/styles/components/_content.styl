.scene-wrapper
  color: #ffffff
  font-family Arial, Helvetica, sans-serif

h1
h2
  margin-top: 10px
  font-weight normal
  font-size 20px
  text-shadow: 1px 1px #808080;
  @media screen and (max-width: 568px)
    margin-top 0
    font-size 13px
    min-width: 100px

.page-content
  position: absolute;
  width 100%
  height 100%
  .logo
  .edit-title
    position absolute
    z-index 100
    padding: $layoutSpace
    @media screen and (max-width: 568px)
      padding $layoutSpaceHalf
  .logo
    width 181px
    @media screen and (max-width: 568px)
      width 100px
    img
      width 100%
  .edit-title
    bottom 0
