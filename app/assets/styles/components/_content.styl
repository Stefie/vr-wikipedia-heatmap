.page-content
  z-index 100
  padding $layoutSpace
  position: absolute;
  top: 0;
  text-align: left
  max-width 50%
  color: #ffffff
  font-family "Times New Roman", Times, serif;
  text-transform uppercase
  @media screen and (max-width: 568px)
    padding $layoutSpaceHalf
  img
    width auto
    max-width 100%
    @media screen and (max-width: 568px)
      max-width 180px
      width 100%
  h1
    margin-left 10px
    margin-top: 10px
    font-weight normal
    font-size 20px
    text-shadow: 1px 1px #808080;
    @media screen and (max-width: 568px)
      font-size 13px
